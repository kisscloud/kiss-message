<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 定义一个映射配置文件的根节点 -->
<!-- namespace 属性用来定义配置命名空间， 主要进行 session 级别的缓存管理 -->
<!-- namespace 默认使用当前操作实体类的全路径 -->
<mapper namespace="com.kiss.message.mapper.SMSLogMapper">

    <select id="getSMSLogs" parameterType="java.util.Map" resultType="com.kiss.message.entity.SMSLog">
        select * from smslogs
        where 1=1
        <if test="clientId != null">
            and clientId = #{clientId}
        </if>
        <if test="templateId != null">
            and templateId = #{templateId}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
        <if test="receiver != null">
            and receiver = #{receiver}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="channel != null">
            and channel = #{channel}
        </if>
        <if test="startedAt != null">
            and createdAt &gt;= #{startedAt}
        </if>
        <if test="endedAt != null">
            and createdAt &lt;= #{endedAt}
        </if>
        <if test="start != null">
            limit start,size
        </if>
    </select>

    <insert id="createSMSLog" parameterType="com.kiss.message.entity.SMSLog" useGeneratedKeys="true" keyProperty="id">
        insert into smslogs (clientId,templateId,type,receiver,content,status,channel,response)
        value
        (#{clientId},#{templateId},#{type},#{receiver},#{content},#{status},#{channel},#{response})
    </insert>
</mapper>